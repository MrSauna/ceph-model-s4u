# begin crush map
tunable choose_local_tries 0
tunable choose_local_fallback_tries 0
tunable choose_total_tries 50
tunable chooseleaf_descend_once 1
tunable chooseleaf_vary_r 1
tunable chooseleaf_stable 1
tunable straw_calc_version 1
tunable allowed_bucket_algs 54

# devices
{%- include 'osds.j2' %}

# types
type 0 osd
type 1 host
type 2 chassis
type 3 rack
type 4 row
type 5 pdu
type 6 pod
type 7 room
type 8 datacenter
type 9 region
type 10 root

# buckets
{%- include 'buckets.j2' %}

# rules
{%- for root in roots %}
rule replicated_ruleset{{ loop.index0 }} {
	id {{ loop.index0 }}		# do not change unnecessarily
	type replicated
	step take {{ root.name }}
	step chooseleaf firstn 0 type host
	step emit
}
{%- endfor %}

# end crush map

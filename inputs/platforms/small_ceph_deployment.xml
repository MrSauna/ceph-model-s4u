<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <!-- The master actor (with some arguments) -->
  <actor host="mon.0" function="mon">
    <argument value="1"/>  <!-- pool id -->
    <argument value="results/small_cluster/0/pgdump.txt"/>  <!-- PG Map -->
    <argument value="results/small_cluster/1/pgdump.txt"/>  <!-- PG Map -->
  </actor>

  <!-- The worker processes -->
  <actor host="osd.0" function="osd">
    <argument value="0"/>  <!-- osd id -->
  </actor>
  <actor host="osd.1" function="osd">
    <argument value="1"/>  <!-- osd id -->
  </actor>
  <actor host="osd.2" function="osd">
    <argument value="2"/>  <!-- osd id -->
  </actor>
</platform>

                "--pg-objects=1000",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim medium cluster (multi threaded)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=4:2:2",
                "--dc-speed=10:10:10",
                "--pgdump=results/medium_cluster/0/pgdump.txt",
                "--pgdump=results/medium_cluster/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
                "--cfg=contexts/nthreads:4",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "sim big cluster",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=2:10:24",
                "--dc-speed=10:10:10",
                "--dc-shape=2:5:24",
                "--dc-speed=10:10:10",
                "--pgdump=results/big_cluster/0/pgdump.txt",
                "--pgdump=results/big_cluster/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "sim big cluster (multi threaded)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=2:10:24",
                "--dc-speed=10:10:10",
                "--dc-shape=2:5:24",
                "--dc-speed=10:10:10",
                "--pgdump=results/big_cluster/0/pgdump.txt",
                "--pgdump=results/big_cluster/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
                "--cfg=contexts/nthreads:8",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "Run Snakemake",
            "type": "debugpy",
            "request": "launch",
            "module": "snakemake",
            "args": [
                "--cores",
                "1"
            ],
            "subProcess": true,
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
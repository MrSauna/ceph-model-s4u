        {
            "name": "sim big cluster no backfill",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--cfg=network/model:CM02",
                "--dc-shape=2:10:24",
                "--dc-speed=100:100:25",
                "--pgdump=results/big_cluster_no_backfill/0/pgdump.txt",
                "--pgdump=results/big_cluster_no_backfill/1/pgdump.txt",
                "--start-up-delay=0",
                "--shut-down-delay=300",
                "--profile=balanced",
                "--pg-objects=250",
                "--object-size=8388608",
                "--pool-id=1",
                "--disk-write-bandwidth=268435456",
                "--iops=80",
                "--dc-clients=1",
                "--client-op-size=4194304",
                "--client-read-queue-depth=128",
                "--client-write-queue-depth=32",
                "--client-read-bandwidth=229780184",
                "--client-write-bandwidth=70988595",
                "--output-dir=results/vscode",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "sim big cluster no clients",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--cfg=network/model:CM02",
                "--dc-shape=2:10:24,2:5:24",
                "--dc-speed=100:100:25,100:100:25",
                "--pgdump=results/big_cluster_no_clients/0/pgdump.txt",
                "--pgdump=results/big_cluster_no_clients/1/pgdump.txt",
                "--start-up-delay=0",
                "--shut-down-delay=0",
                "--profile=balanced",
                "--pg-objects=100",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-write-bandwidth=268435456",
                "--iops=80",
                "--dc-clients=1",
                "--client-op-size=4194304",
                "--client-read-queue-depth=0",
                "--client-write-queue-depth=0",
                "--client-read-bandwidth=536870912",
                "--client-write-bandwidth=536870912",
                "--output-dir=results/vscode"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "Run Snakemake",
            "type": "debugpy",
            "request": "launch",
            "module": "snakemake",
            "args": [
                "--cores",
                "1"
            ],
            "subProcess": true,
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
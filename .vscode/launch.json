                "--pg-objects=1",
                "--object-size=4194304",
                "--profile=high_client_ops",
                "--pool-id=1",
                "--disk-write-bandwidth=209715200",
                "--dc-clients=1",
                "--client-read-queue-depth=0",
                "--client-write-queue-depth=64",
                "--client-op-size=4096",
                // "--help",
                // "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                // "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim medium cluster",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=4:2:2",
                "--dc-speed=10:10:10",
                "--pgdump=results/medium_cluster/0/pgdump.txt",
                "--pgdump=results/medium_cluster/1/pgdump.txt",

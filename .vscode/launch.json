    "version": "0.2.0",
    "configurations": [
        {
            "name": "sim small cluster",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=2:2:1",
                "--dc-speed=10:10:10",
                "--dc-shape=2:2:1",
                "--dc-speed=10:10:10",
                "--pgdump=results/small_cluster/0/pgdump.txt",
                "--pgdump=results/small_cluster/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--profile=balanced",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
                // "--help",
                // "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                // "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim small cluster with clients",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=2:2:1",
                "--dc-speed=10:10:10",
                "--dc-shape=2:2:1",
                "--dc-speed=10:10:10",
                "--pgdump=results/small_cluster/0/pgdump.txt",
                "--pgdump=results/small_cluster/1/pgdump.txt",
                "--start-up-delay=60",
                "--shut-down-delay=60",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--profile=balanced",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--dc-clients=2",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
                // "--help",
                // "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                // "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim medium cluster",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=4:2:2",

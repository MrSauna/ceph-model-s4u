{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "oma1 Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                // "--help",
                "--dc-shape=2:2:2",
                "--dc-speed=10:10:10",
                "--dc-weight=10::",
                "--pgdump=results/small_cluster/0/pgdump.txt",
                "--pgdump=results/small_cluster/1/pgdump.txt",
                "--pg-objects=10000",
                "--object-size=4194304",
                "--pool-id=1",
                "--disk-read-bandwidth=125829120",
                "--disk-write-bandwidth=83886080",
                "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}
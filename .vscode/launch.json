{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "oma1 Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "inputs/platforms/small_platform.xml",
                "inputs/platforms/small_ceph_deployment.xml",
                "results/small_cluster/0/pgdump.txt",
                "results/small_cluster/1/pgdump.txt",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}
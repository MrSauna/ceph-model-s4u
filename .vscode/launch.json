        {
            "name": "sim medium cluster (multi threaded)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=4:2:2",
                "--dc-speed=10:10:10",
                "--pgdump=results/medium_cluster/0/pgdump.txt",
                "--pgdump=results/medium_cluster/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--pool-id=1",

    "version": "0.2.0",
    "configurations": [
        {
            "name": "sim small cluster",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=1:4:1",
                "--dc-speed=10:10:10",
                "--pgdump=results/small_cluster_clients_balanced/0/pgdump.txt",
                "--pgdump=results/small_cluster_clients_balanced/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--profile=balanced",
                "--pool-id=1",
                "--disk-write-bandwidth=209715200",
                "--dc-clients=0",
                "--client-read-queue-depth=16",
                "--client-write-queue-depth=16",
                // "--help",
                // "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                // "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim small no backfill",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--cfg=network/model:CM02",
                "--dc-shape=1:4:1",
                "--dc-speed=10:10:10",
                "--pgdump=results/small_cluster_no_backfill/0/pgdump.txt",
                "--pgdump=results/small_cluster_no_backfill/1/pgdump.txt",
                "--output-dir=results/vscode",
                "--pg-objects=1000",
                "--object-size=4194304",
                "--profile=balanced",
                "--pool-id=1",
                "--disk-write-bandwidth=524288000",
                "--iops=50000",
                "--dc-clients=1",
                "--client-read-queue-depth=0",
                "--client-write-queue-depth=64",
                "--client-op-size=4096",
                "--start-up-delay=0",
                "--shut-down-delay=2000",
                // "--help",
                // "--cfg=tracing:1",
                // "--cfg=tracing/uncategorized:1", // crashes simulation
                // "--cfg=tracing/filename:results/vscode/simgrid.trace",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "sim small cluster with clients",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ceph-sim",
            "args": [
                "--dc-shape=1:4:1",
                "--dc-speed=10:10:10",
